{
  "manifest_version": 3,
  "name": "Simple Calculator",
  "version": "0.2",
  "description": "A simple calculator extension for Chrome",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "windows"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
